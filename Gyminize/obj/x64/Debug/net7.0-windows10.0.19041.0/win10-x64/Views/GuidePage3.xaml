<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Gyminize.Views.GuidePage3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Gyminize.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="#515DEF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <FontIcon x:ConnectionId='3'
                x:Name="backIcon"
                FontSize="40"
                Foreground="White"
                Glyph="&#xE96F;"
                                         />
        </StackPanel>
        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <FontIcon x:ConnectionId='2'
                x:Name="nextIcon"
                FontSize="40"
                Foreground="White"
                Glyph="&#xE970;"
                                         />
        </StackPanel>
        <StackPanel
            Grid.Column="1"
            Background="white"
            Orientation="Vertical">
            <TextBlock
                Margin="10"
                FontSize="25"
                Text="Một vài thông tin về cơ thể của bạn"
                TextAlignment="Center" />
            <StackPanel Orientation="Horizontal">
                <Border
                    Width="250"
                    Height="200"
                    Margin="50,10,10,10"
                    Background="PaleTurquoise"
                    BorderBrush="Black"
                    BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextAlignment="Center"> <Run FontSize="30" Text="{Binding TDEEStat}" /> <LineBreak /> <Run Text="Calories mỗi ngày" />
                        </TextBlock>
                        <Rectangle
                            Grid.Row="1"
                            Height="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Fill="Black" />
                        <TextBlock
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextAlignment="Center"> <Run FontSize="30" Text="{Binding BMIStat}" />  <LineBreak /> <Run Text="Chỉ số BMI" />
                        </TextBlock>
                    </Grid>
                </Border>
                <TextBlock
                    Width="450"
                    Margin="20"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap">
                    <Run Text="Dựa trên những thông tin về cơ thể bạn, Ước lượng chính xác nhất bạn cần tiêu thụ trung bình" />
                    <Run FontWeight="Bold" Text="{Binding TDEEStat}" />
                    <Run Text="Calories một ngày để duy trì cơ thể khỏe mạnh, công thức được dựa theo Katch-McArdle Formula" />
                    <LineBreak />
                    <LineBreak />
                    <Run Text="Chỉ số BMI:" />
                    <Run FontWeight="Bold" Text="{Binding BMIStat}" />
                    <Run Text="Cho biết tình trạng cơ thể của bạn: " />
                    <Run FontWeight="Bold" Text="{Binding HealthStatus}" />
                </TextBlock>

            </StackPanel>
            <TextBlock
                Margin="10"
                FontSize="25"
                Text="Các chế độ dinh dưỡng đề xuất"
                TextAlignment="Center" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Border
                    Width="250"
                    Height="200"
                    Background="Azure"
                    BorderBrush="Black"
                    BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="10"
                            FontSize="13"
                            Text="Cutting"
                            TextAlignment="Center" />
                        <Rectangle
                            Grid.Row="1"
                            Height="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Fill="Black" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="10"
                            TextAlignment="Center">
                            <Run
                                FontSize="20"
                                FontWeight="Bold"
                                Text="{Binding CuttingProteins}" />
                            <Run
                                FontSize="12"
                                FontStyle="Italic"
                                Text="Protein" />
                        </TextBlock>
                        <TextBlock
                            Grid.Row="2"
                            Margin="10"
                            TextAlignment="Center">
                            <Run
                                FontSize="20"
                                FontWeight="Bold"
                                Text="{Binding CuttingFats}" />
                            <Run
                                FontSize="12"
                                FontStyle="Italic"
                                Text="Fats" />
                        </TextBlock>
                        <TextBlock
                            Grid.Row="3"
                            Margin="10"
                            TextAlignment="Center">
                            <Run
                                FontSize="20"
                                FontWeight="Bold"
                                Text="{Binding CuttingCarbs}" />
                            <Run
                                FontSize="12"
                                FontStyle="Italic"
                                Text="Carbs" />
                        </TextBlock>
                    </Grid>
                </Border>
                <Border
                    Width="250"
                    Height="200"
                    Background="Azure"
                    BorderBrush="Black"
                    BorderThickness="0,2,0,2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="10"
                            FontSize="13"
                            Text="Maintenance"
                            TextAlignment="Center" />
                        <Rectangle
                            Grid.Row="1"
                            Height="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Fill="Black" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="10"
                            TextAlignment="Center">
                            <Run
                                FontSize="20"
                                FontWeight="Bold"
                                Text="{Binding MaintenanceProteins}" />
                            <Run
                                FontSize="12"
                                FontStyle="Italic"
                                Text="Proteins" />
                        </TextBlock>
                        <TextBlock
                            Grid.Row="2"
                            Margin="10"
                            TextAlignment="Center">
                            <Run
                                FontSize="20"
                                FontWeight="Bold"
                                Text="{Binding MaintenanceFats}" />
                            <Run
                                FontSize="12"
                                FontStyle="Italic"
                                Text="Fats" />
                        </TextBlock>
                        <TextBlock
                            Grid.Row="3"
                            Margin="10"
                            TextAlignment="Center">
                            <Run
                                FontSize="20"
                                FontWeight="Bold"
                                Text="{Binding MaintenanceCarbs}" />
                            <Run
                                FontSize="12"
                                FontStyle="Italic"
                                Text="Carbs" />
                        </TextBlock>
                    </Grid>
                </Border>
                <Border
                    Width="250"
                    Height="200"
                    Background="Azure"
                    BorderBrush="Black"
                    BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="10"
                            FontSize="13"
                            Text="Bulking"
                            TextAlignment="Center" />
                        <Rectangle
                            Grid.Row="1"
                            Height="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Fill="Black" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="10"
                            TextAlignment="Center">
                            <Run
                                FontSize="20"
                                FontWeight="Bold"
                                Text="{Binding BulkingProteins}" />
                            <Run
                                FontSize="12"
                                FontStyle="Italic"
                                Text="Protein" />
                        </TextBlock>
                        <TextBlock
                            Grid.Row="2"
                            Margin="10"
                            TextAlignment="Center">
                            <Run
                                FontSize="20"
                                FontWeight="Bold"
                                Text="{Binding BulkingFats}" />
                            <Run
                                FontSize="12"
                                FontStyle="Italic"
                                Text="Fats" />
                        </TextBlock>
                        <TextBlock
                            Grid.Row="3"
                            Margin="10"
                            TextAlignment="Center">
                            <Run
                                FontSize="20"
                                FontWeight="Bold"
                                Text="{Binding BulkingCarbs}" />
                            <Run
                                FontSize="12"
                                FontStyle="Italic"
                                Text="Carbs" />
                        </TextBlock>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

