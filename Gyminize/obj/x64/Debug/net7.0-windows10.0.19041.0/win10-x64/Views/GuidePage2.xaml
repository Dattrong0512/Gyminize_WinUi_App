<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Gyminize.Views.GuidePage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Gyminize.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="#515DEF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <FontIcon x:ConnectionId='8'
                x:Name="backIcon"
                FontSize="40"
                Foreground="White"
                Glyph="&#xE96F;"
                                         />
        </StackPanel>
        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <FontIcon x:ConnectionId='7'
                x:Name="nextIcon"
                FontSize="40"
                Foreground="White"
                Glyph="&#xE970;"
                                         />
        </StackPanel>
        <StackPanel
            Grid.Column="1"
            Background="White"
            Orientation="Vertical">
            <TextBlock
                Margin="20"
                HorizontalAlignment="Center"
                FontSize="18"
                Foreground="#3D52A0">
                Cho biết % Body Fat (Tỉ lệ mỡ cơ thể) hiện tại của bạn
            </TextBlock>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Border x:ConnectionId='2'
                    x:Name="ImageBorder1"
                    Margin="10"
                    Background="{Binding ImageBorder1Background}"
                    BorderBrush="Black"
                    BorderThickness="2"
                                                          
                                                        
                                                          
                                                            
                    Tag="{Binding ImageSource1}">
                    <Image
                        Width="90"
                        Height="400"
                        Source="{Binding ImageSource1}" />
                </Border>
                <Border x:ConnectionId='3'
                    x:Name="ImageBorder2"
                    Margin="10"
                    Background="{Binding ImageBorder2Background}"
                    BorderBrush="Black"
                    BorderThickness="2"
                                                          
                                                        
                                                          
                                                            
                    Tag="{Binding ImageSource2}">
                    <Image
                        Width="95"
                        Height="400"
                        Source="{Binding ImageSource2}" />
                </Border>
                <Border x:ConnectionId='4'
                    x:Name="ImageBorder3"
                    Margin="10"
                    Background="{Binding ImageBorder3Background}"
                    BorderBrush="Black"
                    BorderThickness="2"
                                                          
                                                        
                                                          
                                                            
                    Tag="{Binding ImageSource3}">
                    <Image
                        Width="97"
                        Height="400"
                        Source="{Binding ImageSource3}" />
                </Border>
                <Border x:ConnectionId='5'
                    x:Name="ImageBorder4"
                    Margin="10"
                    Background="{Binding ImageBorder4Background}"
                    BorderBrush="Black"
                    BorderThickness="2"
                                                          
                                                        
                                                          
                                                            
                    Tag="{Binding ImageSource4}">
                    <Image
                        Width="90"
                        Height="400"
                        Source="{Binding ImageSource4}" />
                </Border>
                <Border x:ConnectionId='6'
                    x:Name="ImageBorder5"
                    Margin="10"
                    Background="{Binding ImageBorder5Background}"
                    BorderBrush="Black"
                    BorderThickness="2"
                                                          
                                                        
                                                          
                                                            
                    Tag="{Binding ImageSource5}">
                    <Image
                        Width="110"
                        Height="400"
                        Source="{Binding ImageSource5}" />
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

