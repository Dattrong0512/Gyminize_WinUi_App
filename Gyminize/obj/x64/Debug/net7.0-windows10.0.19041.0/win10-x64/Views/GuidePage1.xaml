<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Gyminize.Views.GuidePage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Gyminize.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="#515DEF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <FontIcon
                FontSize="40"
                Foreground="White"
                Glyph="&#xE96F;" />
        </StackPanel>
        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <FontIcon
                FontSize="40"
                Foreground="White"
                Glyph="&#xE970;" />
        </StackPanel>
        <StackPanel
            Grid.Column="1"
            Background="White"
            Orientation="Vertical">
            <TextBlock
                Margin="20"
                HorizontalAlignment="Center"
                FontSize="18"
                Foreground="#3D52A0">
                Trước khi bắt đầu, chúng tôi cần thu thập một ít thông tin của bạn để hỗ trợ quá trình tập luyện
            </TextBlock>
            <TextBlock
                Margin="10,10,200,10"
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="#3D52A0">
                Giới tính:
            </TextBlock>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <CheckBox
                    Margin="10,0,10,10"
                    Padding="10"
                    Content="Nam" />
                <CheckBox
                    Margin="10,0,10,10"
                    Padding="10"
                    Content="Nữ" />
            </StackPanel>
            <TextBlock
                Margin="10,10,200,10"
                HorizontalAlignment="Center"
                Foreground="#3D52A0">
                Tuổi:
            </TextBlock>
            <TextBox
                Width="300"
                Height="40"
                Margin="10,0,10,10"
                Padding="10"
                HorizontalAlignment="Center"
                BorderBrush="#515DEF"
                PlaceholderText="18"
                TextAlignment="Center" />
            <TextBlock
                Margin="10,10,200,10"
                HorizontalAlignment="Center"
                Foreground="#3D52A0">
                Chiều cao:
            </TextBlock>
            <TextBox
                Width="300"
                Height="40"
                Margin="10,0,10,10"
                Padding="10"
                HorizontalAlignment="Center"
                BorderBrush="#515DEF"
                PlaceholderText="180cm"
                TextAlignment="Center" />
            <TextBlock
                Margin="10,10,200,10"
                HorizontalAlignment="Center"
                Foreground="#3D52A0">
                Cân nặng:
            </TextBlock>
            <TextBox
                Width="300"
                Height="40"
                Margin="10,0,10,10"
                Padding="10"
                HorizontalAlignment="Center"
                BorderBrush="#515DEF"
                PlaceholderText="75Kg"
                TextAlignment="Center" />
            <TextBlock
                Margin="10,10,10,10"
                HorizontalAlignment="Center"
                Foreground="#3D52A0">
                Tần suất vận động
            </TextBlock>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="120"
                    Height="70"
                    Margin="10,0,10,10"
                    Padding="10"
                    Background="#515DEF"
                    Content="Thấp"
                    Foreground="White" />
                <Button
                    Width="120"
                    Height="70"
                    Margin="10,0,10,10"
                    Padding="10"
                    Background="#515DEF"
                    Content="Trung bình"
                    Foreground="White" />
                <Button
                    Width="120"
                    Height="70"
                    Margin="10,0,10,10"
                    Padding="10"
                    Background="#515DEF"
                    Content="Cao"
                    Foreground="white" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>

