<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Gyminize.Views.SigninPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="using:Gyminize.ViewModels" 
    xmlns:local="using:Gyminize.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <vm:SigninViewmodel/>
    </Page.DataContext>
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <Image
                        Width="40"
                        Height="40"
                        Source="ms-appx:///Assets/iconapp.png" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontFamily="Red Hat Display"
                        FontSize="16"
                        FontWeight="Bold">
                        Gyminize
                    </TextBlock>
                </StackPanel>
                <TextBlock
                    Margin="10,20,0,20"
                    HorizontalAlignment="Center"
                    FontSize="30"
                    Foreground="Black">
                    Đăng nhập
                </TextBlock>
                <TextBox
                    Width="300"
                    Height="40"
                    Margin="10"
                    Padding="10"
                    PlaceholderText="Tên đăng nhập" />
                <PasswordBox
                    Width="300"
                    Height="40"
                    Margin="10"
                    Padding="10"
                    PlaceholderText="Mật khẩu" />

                <CheckBox
                    Margin="15,0,0,0"
                    Padding="10"
                    FontSize="12">
                    Ghi nhớ đăng nhập
                </CheckBox>
                <Button
                    Width="300"
                    Height="40"
                    Margin="10,20,10,10"
                    Background="#515DEF"
                    Content="Đăng nhập"
                    Foreground="White" 
                    />

                <TextBlock
                    Margin="20"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    FontStyle="Italic"
                    Text="{Binding LoginStatus}">
                    Hoặc
                </TextBlock>
                <Button x:ConnectionId='2' x:Name="Login"
                    Width="300"
                    Height="40"
                    Margin="10"
                        Command="{Binding LoginCommand}"
                    >
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,10,0"
                            Source="ms-appx:///Assets/google.svg" />
                        <TextBlock  VerticalAlignment="Center">Đăng nhập với Google</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <Image
                Width="500"
                Height="600"
                Margin="30"
                Source="ms-appx:///Assets/training1.png" />
        </StackPanel>
    </Grid>
</Page>

