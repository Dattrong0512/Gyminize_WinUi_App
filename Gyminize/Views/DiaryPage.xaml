<Page
    x:Class="Gyminize.Views.DiaryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:Gyminize.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#003366" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="10" />
        </Style>
        <Style x:Key="TextBlockHeaderStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#003366" />
        </Style>
        <Style x:Key="TextBlockDetailStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="50,10,10,10" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style x:Key="ItemTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="ItemServingUnitTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="Gray" />
        </Style>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    </Page.Resources>

    <Grid
        x:Name="ContentArea"
        Background="White"
        CornerRadius="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <CalendarView
            x:Name="MyCalendarView"
            Grid.Column="0"
            Width="500"
            Height="400"
            Margin="10,10,10,60"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            BorderBrush="DarkCyan"
            BorderThickness="2"
            CalendarViewDayItemChanging="MyCalendarView_CalendarViewDayItemChanging"
            CornerRadius="10"
            DisplayMode="Month"
            FirstDayOfWeek="Monday"
            FontWeight="Bold"
            Foreground="#003366"
            SelectedDatesChanged="MyCalendarView_SelectedDatesChanged"
            SelectionMode="Single" />
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Style="{StaticResource BorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="23"
                        FontWeight="ExtraBlack"
                        Style="{StaticResource TextBlockHeaderStyle}"
                        Text="Thông tin chi tiết" />
                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Height="2"
                        Margin="0"
                        VerticalAlignment="Bottom"
                        BorderBrush="#003366"
                        BorderThickness="2" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        FontStyle="Italic"
                        Style="{StaticResource TextBlockDetailStyle}"
                        Text="{Binding SelectedDayText, Mode=TwoWay}" />
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Image
                            Width="30"
                            Height="30"
                            Source="ms-appx:///Assets/Icon/weight.svg" />
                        <TextBlock Margin="10">
                            <Run
                                FontSize="25"
                                FontWeight="Bold"
                                Foreground="RoyalBlue"
                                Text="{Binding WeightText}" />
                            <Run FontSize="13" Text=" Kg" />
                        </TextBlock>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Image
                            Width="30"
                            Height="30"
                            Source="ms-appx:///Assets/Icon/fire.svg" />
                        <TextBlock Margin="10">
                            <Run
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="DarkOrange"
                                Text="{Binding BurnedCalories}" />
                            <Run FontSize="24" Text="/" />
                            <Run
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="DarkOrange"
                                Text="{Binding TotalCalories}" />
                            <LineBreak />
                            <Run FontSize="13" Text="Calories tiêu thụ" />
                        </TextBlock>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Image
                            Width="30"
                            Height="30"
                            Source="ms-appx:///Assets/Icon/gymplan.svg" />
                        <TextBlock Margin="10">
                            <Run
                                FontSize="23"
                                FontWeight="Bold"
                                Foreground="DarkGreen"
                                Text="{Binding PlanNameText, Mode=TwoWay}" />

                        </TextBlock>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="30"
                            Height="30"
                            Source="ms-appx:///Assets/Icon/arm.svg" />
                        <TextBlock
                            MaxWidth="200"
                            Margin="10"
                            TextWrapping="Wrap">
                            <Run
                                FontSize="21"
                                FontWeight="Bold"
                                Foreground="DarkGreen"
                                Text="{Binding TypeWorkoutText, Mode=TwoWay}" />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource BorderStyle}">
                    <StackPanel>
                        <TextBlock
                            Foreground="DarkCyan"
                            Style="{StaticResource TextBlockHeaderStyle}"
                            Text="Bữa sáng" />
                        <Border
                            Height="2"
                            Margin="0"
                            BorderBrush="#003366"
                            BorderThickness="2" />
                        <ScrollViewer Height="70" VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="OrangeRed"
                                    Text="Không có dữ liệu"
                                    Visibility="{Binding IsBreakfastEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=TwoWay}" />
                                <ItemsControl x:Name="BreakfastItemsControl" ItemsSource="{Binding BreakfastItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid
                                                Margin="10"
                                                Padding="7"
                                                Background="GhostWhite"
                                                CornerRadius="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Foreground="#003366"
                                                    Style="{StaticResource ItemTextBlockStyle}"
                                                    Text="{Binding Food.food_name}" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Style="{StaticResource ItemServingUnitTextBlockStyle}"
                                                    Text="{Binding Food.serving_unit}" />
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.RowSpan="2"
                                                    Grid.Column="2"
                                                    Margin="10"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center">
                                                    <Run Text="x" />
                                                    <Run Text="{Binding food_amount}" />
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource BorderStyle}">
                    <StackPanel>
                        <TextBlock
                            Foreground="DarkCyan"
                            Style="{StaticResource TextBlockHeaderStyle}"
                            Text="Bữa Tối" />
                        <Border
                            Height="2"
                            Margin="0"
                            BorderBrush="#003366"
                            BorderThickness="2" />
                        <ScrollViewer Height="70" VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="OrangeRed"
                                    Text="Không có dữ liệu"
                                    Visibility="{Binding IsDinnerEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=TwoWay}" />
                                <ItemsControl x:Name="DinnerItemsControl" ItemsSource="{Binding DinnerItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid
                                                Margin="10"
                                                Padding="7"
                                                Background="GhostWhite"
                                                CornerRadius="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Foreground="#003366"
                                                    Style="{StaticResource ItemTextBlockStyle}"
                                                    Text="{Binding Food.food_name}" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Style="{StaticResource ItemServingUnitTextBlockStyle}"
                                                    Text="{Binding Food.serving_unit}" />
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.RowSpan="2"
                                                    Grid.Column="2"
                                                    Margin="10"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center">
                                                    <Run Text="x" />
                                                    <Run Text="{Binding food_amount}" />
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource BorderStyle}">
                    <StackPanel>
                        <TextBlock
                            Foreground="DarkCyan"
                            Style="{StaticResource TextBlockHeaderStyle}"
                            Text="Bữa Trưa" />
                        <Border
                            Height="2"
                            Margin="0"
                            BorderBrush="#003366"
                            BorderThickness="2" />
                        <ScrollViewer Height="70" VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="OrangeRed"
                                    Text="Không có dữ liệu"
                                    Visibility="{Binding IsLunchEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=TwoWay}" />
                                <ItemsControl x:Name="LunchItemsControl" ItemsSource="{Binding LunchItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid
                                                Margin="10"
                                                Padding="7"
                                                Background="GhostWhite"
                                                CornerRadius="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Foreground="#003366"
                                                    Style="{StaticResource ItemTextBlockStyle}"
                                                    Text="{Binding Food.food_name}" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Style="{StaticResource ItemServingUnitTextBlockStyle}"
                                                    Text="{Binding Food.serving_unit}" />
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.RowSpan="2"
                                                    Grid.Column="2"
                                                    Margin="10"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center">
                                                    <Run Text="x" />
                                                    <Run Text="{Binding food_amount}" />
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource BorderStyle}">
                    <StackPanel>
                        <TextBlock
                            Foreground="DarkCyan"
                            Style="{StaticResource TextBlockHeaderStyle}"
                            Text="Bữa Xế" />
                        <Border
                            Height="2"
                            Margin="0"
                            BorderBrush="#003366"
                            BorderThickness="2" />
                        <ScrollViewer Height="70" VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="OrangeRed"
                                    Text="Không có dữ liệu"
                                    Visibility="{Binding IsSnackEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=TwoWay}" />
                                <ItemsControl x:Name="SnackItemsControl" ItemsSource="{Binding SnackItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid
                                                Margin="10"
                                                Padding="7"
                                                Background="GhostWhite"
                                                CornerRadius="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Foreground="#003366"
                                                    Style="{StaticResource ItemTextBlockStyle}"
                                                    Text="{Binding Food.food_name}" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Style="{StaticResource ItemServingUnitTextBlockStyle}"
                                                    Text="{Binding Food.serving_unit}" />
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.RowSpan="2"
                                                    Grid.Column="2"
                                                    Margin="10"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center">
                                                    <Run Text="x" />
                                                    <Run Text="{Binding food_amount}" />
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
