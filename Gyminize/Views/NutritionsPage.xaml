<Page
    x:Class="Gyminize.Views.NutritionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        x:Name="ContentArea"
        Padding="20"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <!--  Cột trái để hiển thị các bữa ăn  -->
            <ColumnDefinition Width="*" />
            <!--  Cột phải để hiển thị thư viện thực phẩm  -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="0,0,10,10"
                FontSize="24"
                FontWeight="Bold"
                Text="{Binding TotalCaloriesExpression}" />
            <!--  Cột Trái: Danh sách các bữa ăn (Bữa Sáng, Bữa Trưa, Bữa Tối, Bữa Xế)  -->
            <ScrollViewer
                Grid.Row="1"
                Margin="0,0,10,0"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="20">
                    <!--  Phần Bữa Sáng  -->
                    <StackPanel>
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="Bữa Sáng" />
                        <ItemsControl x:Name="BreakfastItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="5"
                                        Padding="10"
                                        Background="White"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Cột Trái: Tên thực phẩm và số lượng  -->
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    FontSize="14"
                                                    Foreground="Gray"
                                                    Text="{Binding Amount}" />
                                            </StackPanel>

                                            <!--  Cột Phải: Lượng calo  -->
                                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                <!--  Cột Phải: Lượng calo  -->
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="10"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Text="{Binding Calories}" />
                                                <Button
                                                    Padding="2,2"
                                                    VerticalAlignment="Center"
                                                    Click="DelButton_Click"
                                                    Tag="{Binding}">
                                                    <FontIcon Glyph="&#xE74D;" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!--  Phần Bữa Trưa  -->
                    <StackPanel>
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="Bữa Trưa" />
                        <ItemsControl x:Name="LunchItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="5"
                                        Padding="10"
                                        Background="White"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Cột Trái: Tên thực phẩm và số lượng  -->
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    FontSize="14"
                                                    Foreground="Gray"
                                                    Text="{Binding Amount}" />
                                            </StackPanel>

                                            <!--  Cột Phải: Lượng calo  -->
                                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                <!--  Cột Phải: Lượng calo  -->
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="10"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Text="{Binding Calories}" />
                                                <Button
                                                    Padding="2,2"
                                                    VerticalAlignment="Center"
                                                    Click="DelButton_Click"
                                                    Tag="{Binding}">
                                                    <FontIcon Glyph="&#xE74D;" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!--  Phần Bữa Tối  -->
                    <StackPanel>
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="Bữa Tối" />
                        <ItemsControl x:Name="DinnerItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="5"
                                        Padding="10"
                                        Background="White"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Cột Trái: Tên thực phẩm và số lượng  -->
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    FontSize="14"
                                                    Foreground="Gray"
                                                    Text="{Binding Amount}" />
                                            </StackPanel>
                                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                <!--  Cột Phải: Lượng calo  -->
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="10"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Text="{Binding Calories}" />
                                                <Button
                                                    Padding="2,2"
                                                    VerticalAlignment="Center"
                                                    Click="DelButton_Click"
                                                    Tag="{Binding}">
                                                    <FontIcon Glyph="&#xE74D;" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!--  Phần Bữa Xế  -->
                    <StackPanel>
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="Bữa Xế" />
                        <ItemsControl x:Name="SnackItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="5"
                                        Padding="10"
                                        Background="White"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Cột Trái: Tên thực phẩm và số lượng  -->
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    FontSize="14"
                                                    Foreground="Gray"
                                                    Text="{Binding Amount}" />
                                            </StackPanel>

                                            <!--  Cột Phải: Lượng calo  -->
                                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                <!--  Cột Phải: Lượng calo  -->
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="10"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Text="{Binding Calories}" />
                                                <Button
                                                    Padding="2,2"
                                                    VerticalAlignment="Center"
                                                    Click="DelButton_Click"
                                                    Tag="{Binding}">
                                                    <FontIcon Glyph="&#xE74D;" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Button
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Thêm thức ăn riêng" />
        <!--  Cột Phải: Thư viện thực phẩm  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                FontSize="24"
                FontWeight="Bold"
                Text="Kho thực phẩm" />
            <TextBox
                Grid.Row="1"
                Width="400"
                Height="40"
                Margin="10,10,10,10"
                Padding="10"
                HorizontalAlignment="Center"
                PlaceholderText="Tìm kiếm thức ăn từ kho dữ liệu" />
            <Button
                Grid.Row="1"
                Width="40"
                Height="40"
                Margin="0,0,20,0"
                Padding="2,2"
                HorizontalAlignment="Right">
                <FontIcon Glyph="&#xE721;" />
            </Button>

            <ScrollViewer
                Grid.Row="2"
                Margin="10,0,0,0"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="10">

                    <ListView
                        x:Name="FoodLibrary"
                        ItemsSource="{Binding FoodLibraryItems}"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="5"
                                    Padding="10"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Cột Trái: Tên thực phẩm và số lượng  -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="{Binding Name}" />
                                            <TextBlock
                                                FontSize="14"
                                                Foreground="Gray"
                                                Text="{Binding Amount}" />
                                        </StackPanel>

                                        <!--  Cột Phải: Lượng calo và nút Thêm  -->
                                        <StackPanel
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal"
                                            Spacing="10">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Text="{Binding Calories}" />
                                            <Button
                                                Padding="2,2"
                                                VerticalAlignment="Center"
                                                Click="AddButton_Click"
                                                Tag="{Binding}">
                                                <FontIcon Glyph="&#xE710;" />
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
